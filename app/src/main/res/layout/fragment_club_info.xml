<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ca.jamespierce.rpgclubapp.ClubInfoFragment"
    android:orientation="vertical">

            <TextView
                android:text="Contact Us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactTitle"
                android:textSize="36sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:padding="10dp" />

            <TextView
                android:text="Club Phone Number: \n519-519-5199"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clubCellNumber"
                android:textSize="24sp"
                android:padding="4dp"
                android:textAlignment="center" />

            <TextView
                android:text="Club Members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clubMembers"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textSize="36sp"
                android:padding="10dp" />
            <!-- This will display information about the Club Members-->
            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/membercontent" />
</LinearLayout>
